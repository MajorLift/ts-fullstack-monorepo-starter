{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [],
    "typeRoots": [
      "../common/@types",
      "../node_modules/@types"
    ],
    "paths": {
      "@mono/core": [
        "../common/core/src"
      ],
      "@mono/feature": [
        "../common/feature/src"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "static/*": [
        "../static/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ],
    },
  },
  "references": [
    {
      "path": "../common/core/tsconfig.json"
    },
    {
      "path": "../common/feature/tsconfig.json"
    },
  ],
  "exclude": [
    "build",
    "static",
    "node_modules"
  ],
  "include": [
    "src",
    "tests"
  ]
}